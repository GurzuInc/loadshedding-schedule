#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'thor'
require 'downloader'
require 'schedule'
require 'schedule_parser'
require 'group_scheduler'
require 'schedule_formatter'
require 'week_day'
require 'date'
require 'byebug' #TODO: REMOVE BEFORE PUBLISHING
require 'httparty' #TODO: REMOVE BEFORE PUBLISHING


schedule = Schedule.new
date = Date.today
schedule = schedule.schedule_for date, 2
formattor = ScheduleFormatter.new(schedule, date)
formattor.format
puts formattor.formatted_result
